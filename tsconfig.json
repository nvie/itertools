{
    "compilerOptions": {
        "noEmit": true,
        "strict": true,
        "target": "es2020",
        "lib": ["es6"],
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "~": ["./src"],
            "~/*": ["./src/*"]
        }
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist"]
}
